<Window x:Class="ObjViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas/xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ObjViewer"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Obj Viewer" Height="800" Width="1000"
        MinHeight="600" MinWidth="900"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid
                x:Name="GridPicture"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="8"
                Background="Black"
                MouseWheel="GridPicture_MouseWheel"
                MouseLeftButtonDown="GridPicture_MouseLeftButtonDown"
                MouseMove="GridPicture_MouseMove"
                MouseLeftButtonUp="GridPicture_MouseLeftButtonUp"
                MouseRightButtonDown="GridPicture_MouseRightButtonDown"
                MouseRightButtonUp="GridPicture_MouseRightButtonUp"
                MouseLeave="GridPicture_MouseLeave">
                <Image
                    x:Name="Picture">
                </Image>
            </Grid>

            <materialDesign:Card
                Grid.Column="1"
                UniformCornerRadius="8"
                Padding="8"
                Margin="8 0 0 0"
                VerticalAlignment="Bottom">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button
                            x:Name="OpenFileButton"
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Content="Open File"
                            Margin="8"
                            Click="OpenFileButton_Click"/>
                        
                        <Button
                            x:Name="DrawButton"
                            Grid.Row="0"
                            Grid.Column="3"
                            Grid.ColumnSpan="4"
                            Content="Draw"
                            Margin="8"
                            Click="DrawButton_Click"/>
                        
                        <StackPanel
                            Grid.Column="0"
                            Grid.Row="2"
                            Grid.ColumnSpan="5"
                            Margin="4">
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*"></ColumnDefinition>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Row="0" Grid.Column="0" x:Name="BresenhamRadioButton" IsChecked="True" Content="Bresenham" Click="DrawButton_Click" Margin="4"/>
                                <RadioButton Grid.Row="1" Grid.Column="0"  x:Name="FlatShadingRadioButton" Content="Flat Shading" Click="DrawButton_Click" Margin="4"/>
                                <RadioButton Grid.Row="2" Grid.Column="0" x:Name="BlinnPhongRadioButton" Content="Blinn-Phong" Click="DrawButton_Click" Margin="4"/>
                            </Grid>
                        </StackPanel>
                        
                       
                        
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="7">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                    
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions> 
                                
                                <Label 
                                    Content="Light Position" 
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <Label
                                    Content="X"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <TextBox
                                    x:Name="LightVectorXTextBox"
                                    Text="0"
                                    Grid.Column="2"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <Label 
                                    Content="Y" 
                                    Grid.Column="3"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <TextBox
                                    x:Name="LightVectorYTextBox"
                                    Text="0"
                                    Grid.Column="4"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <Label 
                                    Content="Z" 
                                    Grid.Column="5"
                                    Grid.Row="0"
                                    Margin="4"/>
                                <TextBox
                                    x:Name="LightVectorZTextBox"
                                    Text="5"
                                    Grid.Column="6"
                                    Grid.Row="0"
                                    Margin="4"/>
                                
                                <Label 
                                    Content="Model Color" 
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Margin="4"/>
                                <toolkit:ColorPicker 
                                    Grid.Row="1" 
                                    Grid.ColumnSpan="6" 
                                    x:Name="ModelColorPicker" 
                                    Grid.Column="1" 
                                    DisplayColorAndName="True" 
                                    AvailableColorsSortingMode="HueSaturationBrightness" 
                                    SelectedColor="Green"
                                    SelectedColorChanged="DrawButton_Click"/>
                                
                                <Label
                                    Content="Ambient Intensity"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <Slider 
                                    x:Name="AmbientIntensitySlider"
                                    ValueChanged="DrawButton_Click"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="6"
                                    Margin="4"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="0.0002"/>
                                <Label
                                    Content="Diffuse Intensity"
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <Slider 
                                    x:Name="DiffuseIntensitySlider"
                                    ValueChanged="DrawButton_Click"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="6"
                                    Margin="4"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="0.9"/>
                                <Label
                                    Content="Specular Intensity"
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <Slider 
                                    x:Name="SpecularIntensitySlider"
                                    ValueChanged="DrawButton_Click"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="6"
                                    Margin="4"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="0.9"/>
                                <Label
                                    Content="Shine Intensity"
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <Slider 
                                    x:Name="ShineIntensitySlider"
                                    ValueChanged="DrawButton_Click"
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="6"
                                    Margin="4"
                                    Minimum="0.1"
                                    Maximum="1000"
                                    Value="64"/>
                                <Label
                                    Content="Light Intensity"
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <Slider 
                                    x:Name="LightIntensitySlider"
                                    ValueChanged="DrawButton_Click"
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="6"
                                    Margin="4"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="64"/>
                                <Label
                                    Content="Light Color"
                                    Grid.Row="7"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <toolkit:ColorPicker 
                                    Grid.Row="7" 
                                    Grid.ColumnSpan="6" 
                                    x:Name="LightColorPicker" 
                                    Grid.Column="1" 
                                    DisplayColorAndName="True" 
                                    AvailableColorsSortingMode="HueSaturationBrightness" 
                                    SelectedColor="White"
                                    SelectedColorChanged="DrawButton_Click"/> 
                                <Label
                                    Content="Specular Color"
                                    Grid.Row="8"
                                    Grid.Column="0"
                                    Margin="4"/>
                                <toolkit:ColorPicker 
                                    Grid.Row="8" 
                                    Grid.ColumnSpan="6" 
                                    x:Name="SpecularColorPicker" 
                                    Grid.Column="1" 
                                    DisplayColorAndName="True" 
                                    AvailableColorsSortingMode="HueSaturationBrightness" 
                                    SelectedColor="White"
                                    SelectedColorChanged="DrawButton_Click"/> 
                            </Grid>
                        </StackPanel>
                        
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
        </Grid>
    </Grid>
</Window>
